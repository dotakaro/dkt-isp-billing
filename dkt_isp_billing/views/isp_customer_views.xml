<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_isp_customer_tree" model="ir.ui.view">
        <field name="name">isp.customer.tree</field>
        <field name="model">isp.customer</field>
        <field name="arch" type="xml">
            <tree string="Pelanggan" decoration-danger="state=='isolated'" decoration-success="state=='active'">
                <field name="customer_id"/>
                <field name="name"/>
                <field name="mobile"/>
                <field name="package_id"/>
                <field name="state"/>
                <field name="is_adopted_secret"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_isp_customer_form" model="ir.ui.view">
        <field name="name">isp.customer.form</field>
        <field name="model">isp.customer</field>
        <field name="arch" type="xml">
            <form string="Pelanggan">
                <header>
                    <button name="action_activate" 
                            string="Aktifkan" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_isolate" 
                            string="Isolir" 
                            type="object"
                            invisible="state != 'active'"/>
                    <button name="action_enable" 
                            string="Buka Isolir" 
                            type="object"
                            class="oe_highlight"
                            invisible="state != 'isolated'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="customer_id" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="mobile"/>
                            <field name="email"/>
                            <field name="address"/>
                        </group>
                        <group>
                            <field name="package_id"/>
                            <field name="mikrotik_user_id" readonly="1"/>
                            <field name="is_adopted_secret" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="CPE" name="cpe">
                            <field name="cpe_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="mac_address"/>
                                    <field name="ip_address"/>
                                    <field name="pppoe_username"/>
                                    <field name="pppoe_password"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_isp_customer_search" model="ir.ui.view">
        <field name="name">isp.customer.search</field>
        <field name="model">isp.customer</field>
        <field name="arch" type="xml">
            <search string="Pelanggan">
                <field name="customer_id"/>
                <field name="name"/>
                <field name="mobile"/>
                <field name="package_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Aktif" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Terisolir" name="isolated" domain="[('state', '=', 'isolated')]"/>
                <filter string="Secret Diadopsi" name="adopted" domain="[('is_adopted_secret', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Paket" name="group_by_package" context="{'group_by': 'package_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="view_isp_customer_action" model="ir.actions.act_window">
        <field name="name">Pelanggan</field>
        <field name="res_model">isp.customer</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_isp_customer_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat pelanggan baru
            </p>
        </field>
    </record>
</odoo> 